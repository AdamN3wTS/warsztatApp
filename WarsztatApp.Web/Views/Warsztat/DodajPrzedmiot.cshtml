@model WarsztatApp.Web.Models.Przedmiot

<h2 class="mt-4 mb-4">Dodaj nowy przedmiot do magazynu</h2>

<div class="card p-4 shadow-sm">
    <form asp-action="DodajPrzedmiot" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Nazwa" class="form-label"></label>
            <input asp-for="Nazwa" class="form-control" />
            <span asp-validation-for="Nazwa" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Ilosc" class="form-label"></label>
            <input asp-for="Ilosc" type="number" min="1" class="form-control" />
            <span asp-validation-for="Ilosc" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Cena" class="form-label"></label>
            <input asp-for="Cena" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Cena" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="typPrzedmiotu" class="form-label"></label>
            <select asp-for="typPrzedmiotu" asp-items="Html.GetEnumSelectList<PrzedmiotEnum>()" class="form-select"></select>
            <span asp-validation-for="typPrzedmiotu" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Dodaj przedmiot</button>
    </form>
</div>
